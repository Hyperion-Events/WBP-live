{
  "name": "wbplive",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "prelint": "npm run lint --silent",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "DEPLOY_HOSTNAME=eu-west-1.galaxy.meteor.com meteor deploy wbplive-test.eu.meteorapp.com --settings settings.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "just-random": "^2.0.0",
    "material-ui": "^0.19.0",
    "meteor-node-stubs": "^0.2.11",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-loadable": "^5.1.0",
    "react-minimal-pie-chart": "^3.0.0",
    "react-motion": "^0.5.0",
    "react-router-dom": "^4.2.2",
    "react-sortable-hoc": "^0.6.7"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.8",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-root-slash-import": "^1.1.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^21.2.1",
    "storybook-addon-material-ui": "^0.8.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-absolute-path": [
        0
      ],
      "import/no-extraneous-dependencies": "off",
      "import/extensions": "off",
      "no-use-before-define": [
        "warn",
        {
          "functions": false,
          "variables": false
        }
      ],
      "consistent-this": [
        1,
        "self"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ]
    }
  }
}
